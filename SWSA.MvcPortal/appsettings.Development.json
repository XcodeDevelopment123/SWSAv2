{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SwsaConntection": "Server=LAOSENG\\SQLEXPRESS;Database=swsa_db; Trusted_Connection=true;TrustServerCertificate=True;"
    // "SwsaConntection": "Server=26.151.211.26;Database=dev_swsa_db;User=ADMINHERE;Password=rnd123;"
  },
  "Quartz": {
    "scheduler": {
      "instanceName": "QuartzPersistentScheduler",
      "instanceId": "AUTO"
    },
    "threadPool": {
      "type": "Quartz.Simpl.SimpleThreadPool, Quartz",
      "maxConcurrency": 5
    },
    "jobStore": {
      "type": "Quartz.Impl.AdoJobStore.JobStoreTX, Quartz",
      "driverDelegateType": "Quartz.Impl.AdoJobStore.SqlServerDelegate, Quartz",
      "dataSource": "default",
      "tablePrefix": "QRTZ_",
      "misfireThreshold": 60000
    },
    "dataSource": {
      "default": {
        "connectionString": "Server=LAOSENG\\SQLEXPRESS;Database=swsa_db;Trusted_Connection=true;TrustServerCertificate=True;",
        "provider": "SqlServer"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SWSA.MvcPortal",
      "Environment": "Development"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/dev-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7, //Only keep 7 log files
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760 //Max 10Mb each file
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "FileSettings": {
    "LocalDoamin": "https://localhost:7136/", //server domain
    "CloudDomain": ""
  },
  "AllowedOrigins": [
    "http://localhost"
  ]
}
