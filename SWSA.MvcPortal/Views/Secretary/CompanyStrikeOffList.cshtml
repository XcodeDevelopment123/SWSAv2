@using SWSA.MvcPortal.Commons.Extensions
@using SWSA.MvcPortal.Models.Submissions
@model List<CompanyStrikeOffSubmissionVM>
@{
	ViewData["Title"] = "Strike Off List";
}

<h3> Company Strike Off List</h3>

<div class="row">
	<div class="col-md-12">
		<!-- /.card -->
		<div class="card">
			<!-- /.card-header -->
			<div class="card-body">
				<table id="companyDatatable" class="table table-bordered table-striped table-responsive">
					<thead>
						<tr>
							<th>Action</th>
							<th>Year</th>
							<th>Company Name</th>
							<th>Registration Number</th>
							<th>Incorporation Date</th>
							<th>Year End Month</th>
							<th>Start Date</th>
							<th>Complete Date</th>
							<th>SSM Submission Date</th>
							<th>IRB Submission Date</th>
							<th>SSM Strike off Date</th>
							<th>Remarks</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var cp in Model)
						{
							var cpInfo = cp.CompanySimpleInfo;
							<tr>

								<td>
									<div class="btn-group" role="group">
										<a href="/secretary-dept/submissions/company-strike-off/@cp.SubmissionId/edit" class="btn btn-sm btn-warning mr-2"
										   data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
											<i class="fa fa-edit"></i>
										</a>
									</div>
								</td>
								<td>@cp.DisplayYearLabel</td>
								<td>@cpInfo.CompanyName</td>
								<td>@cpInfo.RegistrationNumber</td>
								<td>@cpInfo.IncorporationDate?.ToFormattedString()</td>
								<td>@cpInfo.YearEndMonth?.GetDisplayName()</td>
								<td>@cp.StartDate?.ToFormattedString()</td>
								<td>@cp.CompleteDate?.ToFormattedString()</td>
								<td>@cp.SSMSubmissionDate?.ToFormattedString()</td>
								<td>@cp.IRBSubmissionDate?.ToFormattedString()</td>
								<td>@cp.SSMStrikeOffDate?.ToFormattedString()</td>
								<td>@cp.Remarks</td>


							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Action</th>
							<th>Company Name</th>
							<th>Registration Number</th>
							<th>Incorporation Date</th>
							<th>Year End Month</th>
							<th>Start Date</th>
							<th>Complete Date</th>
							<th>SSM Submission Date</th>
							<th>IRB Submission Date</th>
							<th>SSM Strike off Date</th>
							<th>Remarks</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
</div>

@section Scripts {
	<partial name="_DatatablesScriptsPartial" />
	<script src="~/js/secertary/list-submission.js" asp-append-version="true"></script>
}