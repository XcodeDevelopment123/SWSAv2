@{
    ViewData["Title"] = "Form B & P Backlog";
}

<h1>ACC Form B & P Backlog</h1>

<div class="row">
    <div class="col-md-12">
        <div id="alertContainer"></div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-tasks me-2"></i> Form B & P Backlog Records
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#taskModal" id="addNewBtn">
                        <i class="fas fa-plus me-2"></i>New Task
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto">
                <table id="taskDatatable" class="table table-bordered table-striped table-responsive">
                    <thead>
                        <tr>
                            <th colspan="3" class="text-center">Admin</th>
                            <th colspan="8" class="text-center">Co Information</th>
                            <th colspan="8" class="text-center">Scheduling</th>
                            <th rowspan="3" style="vertical-align: middle;">Actions</th>
                        </tr>
                        <tr>
                            <th rowspan="2" style="vertical-align: middle;">Grouping</th>
                            <th rowspan="2" style="vertical-align: middle;">Referral</th>
                            <th rowspan="2" style="vertical-align: middle;">File No</th>
                            <th rowspan="2" style="vertical-align: middle;">Co Name</th>
                            <th rowspan="2" style="vertical-align: middle;">Year End</th>
                            <th colspan="2" class="text-center">Registration</th>
                            <th colspan="2" class="text-center">Tax Reference</th>
                            <th colspan="2" class="text-center">MISC Code</th>
                            <th colspan="4" class="text-center">Work allocation Info</th>
                            <th colspan="1"></th>
                            <th colspan="3" class="text-center">Acc Dept</th>
                        </tr>
                        <tr>
                            <th>Incorp Date</th>
                            <th>Co #</th>
                            <th>E number</th>
                            <th>TIN number</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Sercives Type</th>
                            <th>Co Status</th>
                            <th>Active Co:Activity/size</th>
                            <th>YE to do</th>
                            <th>Date Doc In</th>
                            <th>EST Month to do</th>
                            <th>Staff</th>
                            <th>Allocate to Wk Sch</th>
                        </tr>
                    </thead>
                    <tbody>
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalLabel">
                    <i class="fas fa-edit me-2"></i>
                    <span id="modalTitle">Add New ACC Form B & P Backlog</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="taskForm">
                    <input type="hidden" id="editIndex" value="">
                    <input type="hidden" id="recordId" value="">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="grouping">Grouping</label>
                                <input type="text" id="grouping" name="grouping" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="referral">Referral</label>
                                <input type="text" id="referral" name="referral" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="fileNo">File No</label>
                                <input type="text" id="fileNo" name="fileNo" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="coName">Co Name (Select Enterprise)</label>
