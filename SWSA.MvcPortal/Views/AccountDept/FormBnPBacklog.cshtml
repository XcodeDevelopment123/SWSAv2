@{
    ViewData["Title"] = "Form B & P Backlog";
}

<h1>ACC Form B & P Backlog</h1>

<div class="row">
    <div class="col-md-12">
        <!-- /.card -->
        <div class="card">

            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-tasks me-2"></i>
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#taskModal">
                        <i class="fas fa-plus me-2"></i>New Task
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body" style="overflow:auto">
                <table id="taskDatatable" class="table table-bordered table-striped table-responsive">
                    <thead>
                        <!-- 第一行：主标题 -->
                        <tr>
                            <th colspan="3">Admin</th>
                            <th colspan="8">Co Information</th>
                            <th colspan="8">Scheduling</th>
                        </tr>

                        <!-- 第二行：细分标题 -->
                        <tr>
                            <th rowspan="3">Grouping</th>
                            <th rowspan="3">Referral</th>
                            <th rowspan="3">File No</th>

                            <th rowspan="2">Co Name</th>
                            <th rowspan="2">Year End</th>

                            <th colspan="2">Registration</th>
                            <th colspan="2">Tax Reference</th>
                            <th colspan="2">MISC Code</th>

                            <th colspan="4">Work allocation Info</th>
                            <th colspan="1"></th>
                            <th colspan="3">Acc Dept</th>

                        </tr>

                        <!-- 第三行：每个字段的详细标题 -->
                        <tr>
                            <th>Incorp Date</th>
                            <th>Co #</th>

                            <th>E number</th>
                            <th>TIN number</th>

                            <th>Code</th>
                            <th>Description</th>

                            <th>Sercives Type</th>
                            <th>Co Status</th>
                            <th>Active Co:Activity/size</th>
                            <th>YE to do</th>
                            <th>Date Doc In</th>
                            <th>EST Month to do</th>
                            <th>Staff</th>
                            <th>Allocate to Wk Sch</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<!-- 模态框部分 -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalLabel">
                    <i class="fas fa-edit me-2"></i>
                    <span id="modalTitle">Add New ACC LLP Back log</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="taskForm">
                    <input type="hidden" id="editIndex" value="">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="grouping">Grouping</label>
                                <input type="text" id="grouping" name="grouping" class="form-control" placeholder="Enter grouping" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="referral">Referral</label>
                                <input type="text" id="referral" name="referral" class="form-control" placeholder="Enter referral" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="fileNo">File No</label>
                                <input type="text" id="fileNo" name="fileNo" class="form-control" placeholder="Enter file number" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="coName">Co Name</label>
                                <input type="text" id="coName" name="coName" class="form-control" placeholder="Enter company name" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="yearEnd">Year End</label>
                                <input type="text" id="yearEnd" name="yearEnd" class="form-control" placeholder="Enter year end" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="incorpDate">Incorp Date</label>
                                <input type="text" id="incorpDate" name="incorpDate" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="coNumber">Co #</label>
                                <input type="text" id="coNumber" name="coNumber" class="form-control" placeholder="Enter company number" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="eNumber">E number</label>
                                <input type="text" id="eNumber" name="eNumber" class="form-control" placeholder="Enter E number" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tinNumber">TIN number</label>
                                <input type="text" id="tinNumber" name="tinNumber" class="form-control" placeholder="Enter TIN number" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="miscCode">MISC Code</label>
                                <input type="text" id="miscCode" name="miscCode" class="form-control" placeholder="Enter MISC code" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="miscDescription">MISC Description</label>
                                <input type="text" id="miscDescription" name="miscDescription" class="form-control" placeholder="Enter description" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="servicesType">Services Type</label>
                                <input type="text" id="servicesType" name="servicesType" class="form-control" placeholder="Enter services type" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="coStatus">Co Status</label>
                                <input type="text" id="coStatus" name="coStatus" class="form-control" placeholder="Enter company status" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="activitySize">Active Co:Activity/size</label>
                                <input type="text" id="activitySize" name="activitySize" class="form-control" placeholder="Enter activity/size" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="yeToDo">YE to do</label>
                                <input type="text" id="yeToDo" name="yeToDo" class="form-control" placeholder="Enter YE to do" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dateDocIn">Date Doc In</label>
                                <input type="text" id="dateDocIn" name="dateDocIn" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="estMonthToDo">EST Month to do</label>
                                <input type="text" id="estMonthToDo" name="estMonthToDo" class="form-control" placeholder="Enter month" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="staff">Staff</label>
                                <input type="text" id="staff" name="staff" class="form-control" placeholder="Enter staff name" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="allocateToWkSch">Allocate to Wk Sch</label>
                                <input type="text" id="allocateToWkSch" name="allocateToWkSch" class="form-control" placeholder="Enter allocation" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" id="saveBtn">
                    <i class="fas fa-save me-2"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Include DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- Include Datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script>
        $(document).ready(function() {
            let dataTable;
            let currentEditId = null;

            // 初始化日期选择器
            function initializeDatePickers() {
                $('.datepicker').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true,
                    todayHighlight: true
                });
            }

            // 格式化日期
            function formatDate(dateString) {
                if (!dateString) return '';
                try {
                    const date = new Date(dateString);
                    return date.toLocaleDateString('en-GB');
                } catch (e) {
                    return dateString;
                }
            }

            // 显示提示信息
            function showAlert(message, type) {
                const alertClass = `alert alert-${type} alert-dismissible fade show`;
                const alertHtml = `
                    <div class="${alertClass}" role="alert">
                        <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'danger' ? 'fa-exclamation-circle' : 'fa-info-circle'} me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                $('#alertContainer').html(alertHtml);

                setTimeout(() => {
                    $('.alert').alert('close');
                }, 5000);
            }

            // 重置表单
            function resetForm() {
                $('#taskForm')[0].reset();
                currentEditId = null;
                $('#modalTitle').text('Add New Sdn Bhd Backlog Record');
                $('.datepicker').datepicker('update', '');
                $('#recordId').val('');
            }

            // 测试 API 连接
            function testApiConnection() {
                console.log('Testing API connection to /api/bp31/get-all');

                $.ajax({
                    url: '/api/bp31/get-all',
                    type: 'GET',
                    dataType: 'json',
                    success: function(response) {
                        console.log('API test successful:', response);
                        if (response.success) {
                            console.log('Found', response.data.length, 'records');
                            initializeDataTable();
                        } else {
                            showAlert('API returned error: ' + response.message, 'danger');
                            initializeSimpleTable();
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('API test failed:', error);
                        showAlert('Cannot connect to server. Please check your connection.', 'danger');
                        initializeSimpleTable();
                    }
                });
            }

            // 初始化 DataTable
            function initializeDataTable() {
                try {
                    // 先检查 DataTable 是否已经存在，如果存在则销毁
                    if ($.fn.DataTable.isDataTable('#taskDatatable')) {
                        dataTable.destroy();
                        $('#taskDatatable').empty();
                    }

                    dataTable = $('#taskDatatable').DataTable({
                        "processing": true,
                        "serverSide": false,
                        "ajax": {
                            "url": "/api/bp31/get-all",
                            "type": "GET",
                            "dataSrc": function(response) {
                                if (response.success) {
                                    return response.data;
                                } else {
                                    console.error('Error loading data:', response.message);
                                    showAlert('Error loading data: ' + response.message, 'danger');
                                    return [];
                                }
                            },
                            "error": function(xhr, error, thrown) {
                                console.error('DataTable AJAX error:', error);
                                showAlert('Failed to load data: ' + error, 'danger');
                            }
                        },
                        "columns": [
                            {
                                "data": "grouping",
                                "defaultContent": ""
                            },
                            {
                                "data": "referral",
                                "defaultContent": ""
                            },
                            {
                                "data": "fileNo",
                                "defaultContent": ""
                            },
                            {
                                "data": "companyName",
                                "defaultContent": ""
                            },
                            {
                                "data": "yearEnd",
                                "defaultContent": ""
                            },
                            {
                                "data": "incorpDate",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "co",
                                "defaultContent": ""
                            },
                            {
                                "data": "enumber",
                                "defaultContent": ""
                            },
                            {
                                "data": "tINnumber",
                                "defaultContent": ""
                            },
                            {
                                "data": "code",
                                "defaultContent": ""
                            },
                            {
                                "data": "description",
                                "defaultContent": ""
                            },
                            {
                                "data": "servicesType",
                                "defaultContent": ""
                            },
                            {
                                "data": "coStatus",
                                "defaultContent": ""
                            },
                            {
                                "data": "activeCoActivitySize",
                                "defaultContent": ""
                            },
                            {
                                "data": "yEtoDo",
                                "defaultContent": ""
                            },
                            {
                                "data": "dateDocIn",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "estMthTodo",
                                "defaultContent": ""
                            },
                            {
                                "data": "staff",
                                "defaultContent": ""
                            },
                            {
                                "data": "allocateToWkSch",
                                "defaultContent": ""
                            },
                            {
                                "data": "id",
                                "render": function(data, type, row) {
                                    return `
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-warning edit-btn" data-id="${data}" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger delete-btn" data-id="${data}" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    `;
                                },
                                "orderable": false
                            }
                        ],
                        "order": [[0, 'desc']],
                        "responsive": true,
                        "searching": true,
                        "paging": true,
                        "pageLength": 10,
                        "language": {
                            "emptyTable": "No records found",
                            "zeroRecords": "No matching records found",
                            "loadingRecords": "Loading...",
                            "processing": "Processing..."
                        }
                    });

                    console.log('DataTable initialized successfully');

                } catch (error) {
                    console.error('DataTable initialization failed:', error);
                    showAlert('DataTable initialization failed. Using simple table.', 'warning');
                    initializeSimpleTable();
                }
            }

            // 初始化简单表格（备用）
            function initializeSimpleTable() {
                console.log('Initializing simple table without DataTable');

                $.ajax({
                    url: '/api/bp31/get-all',
                    type: 'GET',
                    success: function(response) {
                        if (response.success) {
                            var tbody = $('#taskDatatable tbody');
                            tbody.empty();

                            if (response.data && response.data.length > 0) {
                                response.data.forEach(function(item) {
                                    var row = `<tr>
                                        <td>${item.grouping || ''}</td>
                                        <td>${item.referral || ''}</td>
                                        <td>${item.fileNo || ''}</td>
                                        <td>${item.companyName || ''}</td>
                                        <td>${item.yearEnd || ''}</td>
                                        <td>${item.incorpDate ? formatDate(item.incorpDate) : ''}</td>
                                        <td>${item.co || ''}</td>
                                        <td>${item.enumber || ''}</td>
                                        <td>${item.tINnumber || ''}</td>
                                        <td>${item.code || ''}</td>
                                        <td>${item.description || ''}</td>
                                        <td>${item.servicesType || ''}</td>
                                        <td>${item.coStatus || ''}</td>
                                        <td>${item.activeCoActivitySize || ''}</td>
                                        <td>${item.yEtoDo || ''}</td>
                                        <td>${item.dateDocIn ? formatDate(item.dateDocIn) : ''}</td>
                                        <td>${item.estMthTodo || ''}</td>
                                        <td>${item.staff || ''}</td>
                                        <td>${item.allocateToWkSch || ''}</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning edit-btn" data-id="${item.id}">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger delete-btn" data-id="${item.id}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>`;
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="20" class="text-center">No records found</td></tr>');
                            }
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Failed to load data for simple table:', error);
                        $('#taskDatatable tbody').html('<tr><td colspan="20" class="text-center">Error loading data</td></tr>');
                    }
                });
            }

            // 保存 BP31 记录
            function saveBP31Record() {
                const formData = {
                    grouping: $('#grouping').val(),
                    referral: $('#referral').val(),
                    fileNo: $('#fileNo').val(),
                    companyName: $('#companyName').val(),
                    yearEnd: $('#yearEnd').val(),
                    incorpDate: $('#incorpDate').val(),
                    co: $('#co').val(),
                    enumber: $('#enumber').val(),
                    tINnumber: $('#tINnumber').val(),
                    code: $('#code').val(),
                    description: $('#description').val(),
                    servicesType: $('#servicesType').val(),
                    coStatus: $('#coStatus').val(),
                    activeCoActivitySize: $('#activeCoActivitySize').val(),
                    yEtoDo: $('#yEtoDo').val(),
                    dateDocIn: $('#dateDocIn').val(),
                    estMthTodo: $('#estMthTodo').val(),
                    staff: $('#staff').val(),
                    allocateToWkSch: $('#allocateToWkSch').val()
                };

                const url = currentEditId ? '/api/bp31/update' : '/api/bp31/create';
                const method = currentEditId ? 'PUT' : 'POST';

                if (currentEditId) {
                    formData.id = currentEditId;
                }

                $('#saveBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Saving...');

                $.ajax({
                    url: url,
                    type: method,
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(response) {
                        $('#saveBtn').prop('disabled', false).html('<i class="fas fa-save me-2"></i>Save');

                        if (response.success) {
                            $('#taskModal').modal('hide');
                            refreshTable();
                            resetForm();
                            showAlert('Record saved successfully!', 'success');
                        } else {
                            showAlert('Error saving record: ' + response.message, 'danger');
                        }
                    },
                    error: function(xhr, status, error) {
                        $('#saveBtn').prop('disabled', false).html('<i class="fas fa-save me-2"></i>Save');
                        showAlert('Error saving record: ' + error, 'danger');
                    }
                });
            }

            // 编辑记录
            function editRecord(id) {
                $.get(`/api/bp31/get/${id}`, function(response) {
                    if (response.success) {
                        const record = response.data;
                        currentEditId = record.id;

                        // 填充表单
                        $('#grouping').val(record.grouping || '');
                        $('#referral').val(record.referral || '');
                        $('#fileNo').val(record.fileNo || '');
                        $('#companyName').val(record.companyName || '');
                        $('#yearEnd').val(record.yearEnd || '');
                        $('#incorpDate').val(record.incorpDate ? record.incorpDate.split('T')[0] : '');
                        $('#co').val(record.co || '');
                        $('#enumber').val(record.enumber || '');
                        $('#tINnumber').val(record.tINnumber || '');
                        $('#code').val(record.code || '');
                        $('#description').val(record.description || '');
                        $('#servicesType').val(record.servicesType || '');
                        $('#coStatus').val(record.coStatus || '');
                        $('#activeCoActivitySize').val(record.activeCoActivitySize || '');
                        $('#yEtoDo').val(record.yEtoDo || '');
                        $('#dateDocIn').val(record.dateDocIn ? record.dateDocIn.split('T')[0] : '');
                        $('#estMthTodo').val(record.estMthTodo || '');
                        $('#staff').val(record.staff || '');
                        $('#allocateToWkSch').val(record.allocateToWkSch || '');

                        $('#modalTitle').text('Edit Sdn Bhd Backlog Record');
                        $('#taskModal').modal('show');
                    } else {
                        showAlert('Error loading record: ' + response.message, 'danger');
                    }
                }).fail(function(xhr, status, error) {
                    showAlert('Error loading record: ' + error, 'danger');
                });
            }

            // 删除记录
            function deleteRecord(id) {
                if (confirm('Are you sure you want to delete this record? This action cannot be undone.')) {
                    $.ajax({
                        url: `/api/bp31/delete/${id}`,
                        type: 'DELETE',
                        success: function(response) {
                            if (response.success) {
                                refreshTable();
                                showAlert('Record deleted successfully!', 'success');
                            } else {
                                showAlert('Error deleting record: ' + response.message, 'danger');
                            }
                        },
                        error: function(xhr, status, error) {
                            showAlert('Error deleting record: ' + error, 'danger');
                        }
                    });
                }
            }

            // 刷新表格
            function refreshTable() {
                if (dataTable && typeof dataTable.ajax.reload === 'function') {
                    dataTable.ajax.reload(null, false);
                } else {
                    initializeSimpleTable();
                }
            }

            // === 事件监听器 ===
            $('#saveBtn').click(saveBP31Record);

            $(document).on('click', '.edit-btn', function() {
                const id = $(this).data('id');
                editRecord(id);
            });

            $(document).on('click', '.delete-btn', function() {
                const id = $(this).data('id');
                deleteRecord(id);
            });

            $('#taskModal').on('hidden.bs.modal', resetForm);

            $('#addNewBtn').click(function() {
                resetForm();
                $('#modalTitle').text('Add New Sdn Bhd Backlog Record');
            });

            $('#taskForm').on('submit', function(e) {
                e.preventDefault();
                saveBP31Record();
            });

            // === 初始化应用 ===
            console.log('Initializing Sdn Bhd Backlog application...');
            initializeDatePickers();
            testApiConnection();
        });
    </script>
}