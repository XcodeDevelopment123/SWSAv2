                            $('#reviewWorkingAcc').prop('checked', record.reviewWorkingAcc === "1");
                            $('#draftFinancialStatement').prop('checked', record.draftFinancialStatement === "1");
                            $('#draftTaxCompleted').prop('checked', record.draftTaxCompleted === "1");
                            $('#reviewTax').prop('checked', record.reviewTax === "1");
                            $('#finalTax').prop('checked', record.finalTax === "1");
                            $('#taxComFinalSignByClient').prop('checked', record.taxComFinalSignByClient === "1");

