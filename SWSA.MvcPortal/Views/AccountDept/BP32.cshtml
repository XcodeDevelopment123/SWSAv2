                            $('#dateTaxSubmited').val(record.dateTaxSubmited ? formatDateForInput(record.dateTaxSubmited) : '');
                            $('#completedBacklog').val(record.completedBacklog || '');

                            // 布尔字段
                            $('#singleEntry').prop('checked', record.singleEntry === "1");
                            $('#taxComputation').prop('checked', record.taxComputation === "1");
                            $('#sortingFiling').prop('checked', record.sortingFiling === "1");
