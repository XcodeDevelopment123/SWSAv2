                            $('#modalTitle').text('Edit BP32 Record');
                            $('#taskModal').modal('show');
                        } else {
                            showAlert('Error loading record: ' + response.message, 'danger');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Edit error:', error);
                        showAlert('Error loading record: ' + error, 'danger');
                    }
                });
            }

            // 删除记录
            function deleteRecord(id) {
                if (confirm('Are you sure you want to delete this record? This action cannot be undone.')) {
                    $.ajax({
                        url: `/api/bp32/delete/${id}`,
                        type: 'DELETE',
                        success: function(response) {
                            if (response.success) {
                                dataTable.ajax.reload(null, false); // 保持当前分页位置
                                showAlert('Record deleted successfully!', 'success');
                            } else {
                                showAlert('Error deleting record: ' + response.message, 'danger');
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error('Delete error:', error);
                            showAlert('Error deleting record: ' + error, 'danger');
                        }
                    });
                }
            }

            // 重置表单
            function resetForm() {
                $('#taskForm')[0].reset();
                currentEditId = null;
                $('#modalTitle').text('Add New BP32 Record');
                $('.datepicker').datepicker('update', '');
                $('#recordId').val('');

                // 重置所有复选框
                $('input[type="checkbox"]').prop('checked', false);
            }

            // 显示提示信息
            function showAlert(message, type) {
                const alertClass = `alert alert-${type} alert-dismissible fade show`;
                const alertHtml = `
                    <div class="${alertClass}" role="alert">
                        <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'danger' ? 'fa-exclamation-circle' : 'fa-info-circle'} me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                $('#alertContainer').html(alertHtml);

                // 自动隐藏
                setTimeout(() => {
                    $('.alert').alert('close');
                }, 5000);
            }

            // 模态框关闭时重置表单
            $('#taskModal').on('hidden.bs.modal', function() {
                resetForm();
            });

            // 添加新的记录按钮点击事件
            $('#addNewBtn').click(function() {
                resetForm();
                $('#modalTitle').text('Add New BP32 Record');
            });

            // 表单提交事件
            $('#taskForm').on('submit', function(e) {
                e.preventDefault();
                saveBP32Record();
            });
        });
    </script>
