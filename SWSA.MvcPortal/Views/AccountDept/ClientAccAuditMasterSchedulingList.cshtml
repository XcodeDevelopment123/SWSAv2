@{
    ViewData["Title"] = "ClientAccAuditMasterSchedulingList";
}

<h1>Client Acc Audit Master Scheduling List</h1>

<div class="row">
    <div class="col-md-12">
        <div id="alertContainer"></div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-tasks me-2"></i>Client Acc Audit Master Schedule Records
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#taskModal" id="addNewBtn">
                        <i class="fas fa-plus me-2"></i>New Record
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto">
                <table id="taskDatatable" class="table table-bordered table-striped table-responsive">
                    <thead>
                        <tr>
                            <th colspan="3" class="text-center">Admin</th>
                            <th colspan="4" class="text-center">Co Information</th>
                            <th colspan="6" class="text-center">Scheduling</th>
                            <th rowspan="3" style="vertical-align: middle;">Actions</th>
                        </tr>

                        <tr>
                            <th rowspan="2">Grouping</th>
                            <th rowspan="2">Referral</th>
                            <th rowspan="2">File No</th>

                            <th rowspan="2">Co Name</th>
                            <th rowspan="2">Year End</th>
                            <th colspan="2" class="text-center">Work Allocation Info</th>

                            <th colspan="6" class="text-center">Acc Dept</th>
                        </tr>

                        <tr>
                            <th>Service Type</th>
                            <th>Active Co:Activity/size</th>

                            <th>YE to do</th>
                            <th>Date Doc In</th>
                            <th>Month to do</th>
                            <th>Staff</th>
                            <th>Allocate to Wk Sch</th>
                            <th>Completed/Backlog</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalLabel">
                    <i class="fas fa-edit me-2"></i>
                    <span id="modalTitle">Add New Client Acc Audit Record</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="taskForm">
                    <input type="hidden" id="recordId" value="">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="grouping">Grouping</label>
                                <input type="text" id="grouping" name="grouping" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="referral">Referral</label>
                                <input type="text" id="referral" name="referral" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="fileNo">File No</label>
                                <input type="text" id="fileNo" name="fileNo" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="companyName">Co Name (Link From Sdn Bhd List)</label>
                                <select id="companySelect" class="form-control">
                                    <option value="">-- Loading Companies... --</option>
                                </select>
                                <input type="hidden" id="companyName" name="companyName" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="yearEnd">Year End</label>
                                <input type="text" id="yearEnd" name="yearEnd" class="form-control" placeholder="Auto-fill" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="servicesType">Service Type</label>
                                <input type="text" id="servicesType" name="servicesType" class="form-control" placeholder="Enter service type" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="activeCoActivitSize">Active Co:Activity/size</label>
                                <input type="text" id="activeCoActivitSize" name="activeCoActivitSize" class="form-control" placeholder="Enter activity/size" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="yEtodo">YE to do</label>
                                <input type="text" id="yEtodo" name="yEtodo" class="form-control" placeholder="Enter YE to do" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dateDocIn">Date Doc In</label>
                                <input type="text" id="dateDocIn" name="dateDocIn" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="mthTodo">Month to do</label>
                                <input type="text" id="mthTodo" name="mthTodo" class="form-control" placeholder="Enter month" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="staff">Staff</label>
                                <input type="text" id="staff" name="staff" class="form-control" placeholder="Enter staff name" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="allocateToWkSch">Allocate to Wk Sch</label>
                                <select id="allocateToWkSch" name="allocateToWkSch" class="form-control">
                                    <option value="">Select Option</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="completed">Completed/Backlog</label>
                                <select id="completed" name="completed" class="form-control">
                                    <option value="">Select Status</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Backlog">Backlog</option>
                                    <option value="In Progress">In Progress</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" id="saveBtn">
                    <i class="fas fa-save me-2"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script>
        $(document).ready(function() {
            let dataTable;
            let currentEditId = null;
            let companyOptionsMap = {};

            // ==========================================
            // 1. 你提供的日期工具函数 (加在这里)
            // ==========================================

            function formatDdMMyyyy(d) {
                const date = (d instanceof Date) ? d : new Date(d);
                if (isNaN(date)) return "";
                const dd = String(date.getDate()).padStart(2, '0');
                const mm = String(date.getMonth() + 1).padStart(2, '0');
                const yyyy = date.getFullYear();
                return `${dd}/${mm}/${yyyy}`;
            }

            // 用于 DataTables 显示 (YYYY-MM-DDT... -> DD/MM/YYYY)
            function formatDate(dateString) {
                if (!dateString) return '';
                try {
                    const date = new Date(dateString);
                    return date.toLocaleDateString('en-GB'); // DD/MM/YYYY
                } catch (e) {
                    return dateString;
                }
            }

            // ★★★ 核心逻辑：把 "December" 变成 "31/12/2025" ★★★
            function yearEndMonthToDateString(monthName) {
                if (!monthName) return '';
                const months = [
                    'January', 'February', 'March', 'April', 'May', 'June',
                    'July', 'August', 'September', 'October', 'November', 'December'
                ];

                // 数据库传来的是英文月份，如 "December"
                const idx = months.indexOf(monthName);
                if (idx === -1) return monthName; // 如果不是月份名，原样返回

                const today = new Date();
                let year = today.getFullYear();

                // 逻辑：如果这个月今年已经过了 (比如现在11月，YearEnd是3月)，那就当作是明年的3月
                // 如果这个月还没到 (比如现在1月，YearEnd是12月)，那就是今年的12月
                if (idx < today.getMonth()) year += 1;

                // 获取该月最后一天 (下个月的第0天 = 这个月最后一天)
                const dt = new Date(year, idx + 1, 0);

                return formatDdMMyyyy(dt); // 返回 DD/MM/YYYY
            }

            // ==========================================
            // END 日期工具
            // ==========================================

            // 初始化日期选择器 (用于 Date Doc In)
            function initializeDatePickers() {
                $('.datepicker').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true,
                    todayHighlight: true
                });
            }

            // 加载 Sdn Bhd 公司下拉菜单
            function loadCompanyOptions() {
                $.ajax({
                    url: '/api/get/company-options',
                    type: 'GET',
                    success: function (res) {
                        if (res.success && res.data) {
                            companyOptionsMap = {};
                            const $sel = $('#companySelect');
                            $sel.empty().append('<option value="">-- Select Sdn Bhd Company --</option>');

                            res.data.forEach(client => {
                                companyOptionsMap[client.id] = client;
                                const displayText = client.companyNo
                                    ? `${client.companyName} (${client.companyNo})`
                                    : client.companyName;
                                $sel.append(`<option value="${client.id}">${displayText}</option>`);
                            });
                        }
                    }
                });
            }

            // ==========================================
            // 2. 修改 Dropdown 联动逻辑
            // ==========================================
            $('#companySelect').on('change', function () {
                const selectedId = $(this).val();

                if (!selectedId || !companyOptionsMap[selectedId]) {
                    // 清空
                    $('#grouping').val('');
                    $('#referral').val('');
                    $('#fileNo').val('');
                    $('#companyName').val('');
                    $('#yearEnd').val('');
                    return;
                }

                // 自动填入
                const c = companyOptionsMap[selectedId];

                $('#grouping').val(c.grouping || '');
                $('#referral').val(c.referral || '');
                $('#fileNo').val(c.fileNo || '');
                $('#companyName').val(c.companyName || '');

                // ★★★ 修改了这里：调用转换函数 ★★★
                // 之前是: $('#yearEnd').val(c.yearEndMonth || '');
                // 现在是:
                const formattedYearEnd = yearEndMonthToDateString(c.yearEndMonth || '');
                $('#yearEnd').val(formattedYearEnd);
            });

            // 初始化 DataTable
            function initializeDataTable() {
                if ($.fn.DataTable.isDataTable('#taskDatatable')) {
                    $('#taskDatatable').DataTable().destroy();
                }

                dataTable = $('#taskDatatable').DataTable({
                    "ajax": {
                        "url": "/api/bp24/get-all",
                        "type": "GET",
                        "dataSrc": function(res) { return res.success ? res.data : []; }
                    },
                    "columns": [
                        { "data": "grouping", "defaultContent": "" },
                        { "data": "refferal", "defaultContent": "" },
                        { "data": "fileNo", "defaultContent": "" },
                        { "data": "companyName", "defaultContent": "" },
                        { "data": "yearEnd", "defaultContent": "" }, // 这里显示 DB 里存的字符串 (即 DD/MM/YYYY)
                        { "data": "servicesType", "defaultContent": "" },
                        { "data": "activeCoActivitSize", "defaultContent": "" },
                        { "data": "yEtodo", "defaultContent": "" },
                        {
                            "data": "dateDocIn",
                            "render": function(data) { return formatDate(data); },
                            "defaultContent": ""
                        },
                        { "data": "mthTodo", "defaultContent": "" },
                        { "data": "staff", "defaultContent": "" },
                        { "data": "allocateToWkSch", "defaultContent": "" },
                        { "data": "completed", "defaultContent": "" },
                        {
                            "data": "id",
                            "render": function(data) {
                                return `
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-warning edit-btn" data-id="${data}"><i class="fas fa-edit"></i></button>
                                        <button class="btn btn-sm btn-danger delete-btn" data-id="${data}"><i class="fas fa-trash"></i></button>
                                    </div>`;
                            },
                            "orderable": false
                        }
                    ],
                    "order": [[0, 'desc']],
                    "responsive": true
                });
            }

            // 保存记录
            function saveBP24Record() {
                if (!$('#companyName').val()) {
                    alert('Please select a company!');
                    return;
                }

                const formData = {
                    grouping: $('#grouping').val(),
                    refferal: $('#referral').val(),
                    fileNo: $('#fileNo').val(),
                    companyName: $('#companyName').val(),
                    yearEnd: $('#yearEnd').val(), // 这里现在会保存 "31/12/2025" 这样的格式
                    servicesType: $('#servicesType').val(),
                    activeCoActivitSize: $('#activeCoActivitSize').val(),
                    yEtodo: $('#yEtodo').val(),
                    dateDocIn: $('#dateDocIn').val(),
                    mthTodo: $('#mthTodo').val(),
                    staff: $('#staff').val(),
                    allocateToWkSch: $('#allocateToWkSch').val(),
                    completed: $('#completed').val()
                };

                const url = currentEditId ? '/api/bp24/update' : '/api/bp24/create';
                const method = currentEditId ? 'PUT' : 'POST';
                if (currentEditId) formData.id = currentEditId;

                $('#saveBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Saving...');

                $.ajax({
                    url: url,
                    type: method,
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(res) {
                        $('#saveBtn').prop('disabled', false).html('Save');
                        if (res.success) {
                            $('#taskModal').modal('hide');
                            dataTable.ajax.reload(null, false);
                            resetForm();
                            alert('Success!');
                        } else {
                            alert('Error: ' + res.message);
                        }
                    },
                    error: function(err) {
                        $('#saveBtn').prop('disabled', false).html('Save');
                        alert('Error: ' + err.statusText);
                    }
                });
            }

            // 编辑记录
            function editRecord(id) {
                $.get(`/api/bp24/get/${id}`, function(res) {
                    if (res.success) {
                        const d = res.data;
                        currentEditId = d.id;

                        // 反向查找 Dropdown
                        let foundId = "";
                        for (const [key, val] of Object.entries(companyOptionsMap)) {
                            if (val.companyName === d.companyName) {
                                foundId = key;
                                break;
                            }
                        }
                        $('#companySelect').val(foundId);

                        $('#grouping').val(d.grouping);
                        $('#referral').val(d.refferal);
                        $('#fileNo').val(d.fileNo);
                        $('#companyName').val(d.companyName);

                        // 直接填入数据库里存的值 (现在是 DD/MM/YYYY 了)
                        $('#yearEnd').val(d.yearEnd);

                        $('#servicesType').val(d.servicesType);
                        $('#activeCoActivitSize').val(d.activeCoActivitSize);
                        $('#yEtodo').val(d.yEtodo);
                        $('#dateDocIn').val(d.dateDocIn ? d.dateDocIn.split('T')[0] : '');
                        $('#mthTodo').val(d.mthTodo);
                        $('#staff').val(d.staff);
                        $('#allocateToWkSch').val(d.allocateToWkSch);
                        $('#completed').val(d.completed);

                        $('#modalTitle').text('Edit Record');
                        $('#taskModal').modal('show');
                    }
                });
            }

            function deleteRecord(id) {
                if(confirm('Delete?')) {
                    $.ajax({
                        url: `/api/bp24/delete/${id}`,
                        type: 'DELETE',
                        success: function(res) {
                            if(res.success) dataTable.ajax.reload(null, false);
                            else alert(res.message);
                        }
                    });
                }
            }

            function resetForm() {
                $('#taskForm')[0].reset();
                currentEditId = null;
                $('#companySelect').val('');
                $('#modalTitle').text('Add New Record');
            }

            // 初始化
            initializeDatePickers();
            loadCompanyOptions();
            initializeDataTable();

            $('#saveBtn').click(saveBP24Record);
            $('#addNewBtn').click(resetForm);
            $('#taskModal').on('hidden.bs.modal', resetForm);
            $(document).on('click', '.edit-btn', function() { editRecord($(this).data('id')); });
            $(document).on('click', '.delete-btn', function() { deleteRecord($(this).data('id')); });
        });
    </script>
}