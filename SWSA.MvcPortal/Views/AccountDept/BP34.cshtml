<!-- 模态框部分 -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalLabel">
                    <i class="fas fa-edit me-2"></i>
                    <span id="modalTitle">Add New Form E Work Progress Record</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="taskForm">
                    <input type="hidden" id="editIndex" value="">

                    <!-- Basic Information -->
                    <div class="form-info-label col-12">
                        <label>Basic Information</label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="item">Item</label>
                                <input type="text" id="item" name="item" class="form-control" placeholder="Enter item number" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="grouping">Grouping</label>
                                <input type="text" id="grouping" name="grouping" class="form-control" placeholder="Enter grouping" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="companyName">Company's Name</label>
                                <input type="text" id="companyName" name="companyName" class="form-control" placeholder="Enter company name" />
                            </div>
                        </div>
                    </div>

                    <!-- Scheduling -->
                    <div class="form-info-label col-12">
                        <label>Scheduling</label>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="draftTaxCompleted">Draft Tax Completed</label>
                                <input type="text" id="draftTaxCompleted" name="draftTaxCompleted" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="reviewTax">Review Tax</label>
                                <input type="text" id="reviewTax" name="reviewTax" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="finalTax">Final Tax</label>
                                <input type="text" id="finalTax" name="finalTax" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="taxComFinalSign">Tax Com Final & Sign by Client</label>
                                <input type="text" id="taxComFinalSign" name="taxComFinalSign" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="amountTaxPayRefund">Amount of Tax Pay/Refund</label>
                                <input type="text" id="amountTaxPayRefund" name="amountTaxPayRefund" class="form-control" placeholder="Enter amount" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="eFileDraft">E-File Draft</label>
                                <input type="text" id="eFileDraft" name="eFileDraft" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="eFileFinal">E-File Final</label>
                                <input type="text" id="eFileFinal" name="eFileFinal" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                    </div>

                    <!-- Tax-Filing -->
                    <div class="form-info-label col-12">
                        <label>Tax-Filing</label>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="taxReferenceNo">Tax Reference No</label>
                                <input type="text" id="taxReferenceNo" name="taxReferenceNo" class="form-control" placeholder="Enter tax reference number" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="eFilingLogin">E-Filing Login</label>
                                <input type="text" id="eFilingLogin" name="eFilingLogin" class="form-control" placeholder="Enter login ID" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="eFilingPassword">E-Filing Password</label>
                                <input type="password" id="eFilingPassword" name="eFilingPassword" class="form-control" placeholder="Enter password" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="typeOfForm">Type of Form</label>
                                <select id="typeOfForm" name="typeOfForm" class="form-control">
                                    <option value="">Select Form Type</option>
                                    <option value="Form E">Form E</option>
                                    <option value="Form EA">Form EA</option>
                                    <option value="Form BE">Form BE</option>
                                    <option value="Form B">Form B</option>
                                    <option value="Form P">Form P</option>
                                    <option value="Form M">Form M</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="spc">SPC</label>
                                <select id="spc" name="spc" class="form-control">
                                    <option value="">Select</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Billing -->
                    <div class="form-info-label col-12">
                        <label>Billing</label>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="invoicesNo">Invoices No</label>
                                <input type="text" id="invoicesNo" name="invoicesNo" class="form-control" placeholder="Enter invoice number" />
                            </div>
                        </div>
                    </div>

                    <!-- Doc Despatch Date -->
                    <div class="form-info-label col-12">
                        <label>Doc Despatch Date</label>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="docDespatchDate">Doc Despatch Date</label>
                                <input type="text" id="docDespatchDate" name="docDespatchDate" class="form-control" placeholder="Select date" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" id="saveBtn">
                    <i class="fas fa-save me-2"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // 初始化日期选择器
            $('input[type="text"]').filter(function() {
                return $(this).attr('id') && $(this).attr('id').includes('Date') ||
                       $(this).attr('id') && $(this).attr('id').includes('date');
            }).datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true
            });

            // 保存按钮点击事件
            $('#saveBtn').click(function() {
                // 这里添加保存逻辑
                console.log('Save button clicked');
                $('#taskModal').modal('hide');
            });

            // 初始化DataTable
            $('#taskDatatable').DataTable({
                responsive: true,
                ordering: true,
                autoWidth: false,
                pageLength: 10,
                language: {
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries"
                }
            });
        });
    </script>
}