@{
    ViewData["Title"] = "BP34";
}

<h1>BP34 Records</h1>

<div class="row">
    <div class="col-md-12">
        <!-- Alert Container -->
        <div id="alertContainer"></div>

        <!-- /.card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-tasks me-2"></i>BP34 Records
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#taskModal" id="addNewBtn">
                        <i class="fas fa-plus me-2"></i>New Record
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body" style="overflow:auto">
                <table id="taskDatatable" class="table table-bordered table-striped table-responsive">
                    <thead>
                        <!-- 第一行：主标题 -->
                        <tr>
                            <th colspan="3">Basic Info</th>
                            <th colspan="7">Tax Process</th>
                            <th colspan="4">E-Filing</th>
                            <th colspan="4">Login & Reference</th>
                            <th colspan="3">Billing & Dispatch</th>
                            <th rowspan="2">Actions</th>
                        </tr>

                        <!-- 第二行：细分标题 -->
                        <tr>
                            <th>Item</th>
                            <th>Grouping</th>
                            <th>Company Name</th>

                            <th>Draft Tax Completed</th>
                            <th>Review Tax</th>
                            <th>Final Tax</th>
                            <th>Tax Com Final Sign by Client</th>
                            <th>Amount Tax Pay</th>
                            <th>E-File Draft</th>
                            <th>E-File Final</th>

                            <th>Tax Reference No</th>
                            <th>Login</th>
                            <th>Password</th>
                            <th>Type of Form</th>

                            <th>SPC</th>
                            <th>Invoice No</th>
                            <th>Doc Despatch Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded dynamically -->
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<!-- 模态框部分 -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalLabel">
                    <i class="fas fa-edit me-2"></i>
                    <span id="modalTitle">Add New BP34 Record</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="taskForm">
                    <input type="hidden" id="recordId" value="">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="item">Item</label>
                                <input type="text" id="item" name="item" class="form-control" placeholder="Enter item" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="grouping">Grouping</label>
                                <input type="text" id="grouping" name="grouping" class="form-control" placeholder="Enter grouping" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="companyName">Company Name</label>
                                <input type="text" id="companyName" name="companyName" class="form-control" placeholder="Enter company name" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="draftTaxCompleted">Draft Tax Completed</label>
                                <input type="text" id="draftTaxCompleted" name="draftTaxCompleted" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="reviewTax">Review Tax</label>
                                <input type="text" id="reviewTax" name="reviewTax" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="finalTax">Final Tax</label>
                                <input type="text" id="finalTax" name="finalTax" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="taxComFinalSignbyClient">Tax Com Final Sign by Client</label>
                                <input type="text" id="taxComFinalSignbyClient" name="taxComFinalSignbyClient" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="amountTaxPay">Amount Tax Pay</label>
                                <input type="text" id="amountTaxPay" name="amountTaxPay" class="form-control" placeholder="Enter amount" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="taxRefferanceNo">Tax Reference No</label>
                                <input type="text" id="taxRefferanceNo" name="taxRefferanceNo" class="form-control" placeholder="Enter reference number" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="eFileDraft">E-File Draft</label>
                                <input type="text" id="eFileDraft" name="eFileDraft" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="eFileFinal">E-File Final</label>
                                <input type="text" id="eFileFinal" name="eFileFinal" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="login">Login</label>
                                <input type="text" id="login" name="login" class="form-control" placeholder="Enter login" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="text" id="password" name="password" class="form-control" placeholder="Enter password" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="typeofForm">Type of Form</label>
                                <input type="text" id="typeofForm" name="typeofForm" class="form-control" placeholder="Enter type of form" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="spc">SPC</label>
                                <input type="text" id="spc" name="spc" class="form-control" placeholder="Enter SPC" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="invoiceNo">Invoice No</label>
                                <input type="text" id="invoiceNo" name="invoiceNo" class="form-control" placeholder="Enter invoice number" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="docDespatchDate">Doc Despatch Date</label>
                                <input type="text" id="docDespatchDate" name="docDespatchDate" class="form-control datepicker" placeholder="Select date" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" id="saveBtn">
                    <i class="fas fa-save me-2"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Include DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- Include Datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script>
        $(document).ready(function() {
            let dataTable;
            let currentEditId = null;

            // 初始化日期选择器
            function initializeDatePickers() {
                $('.datepicker').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true,
                    todayHighlight: true
                });
            }

            // 格式化日期
            function formatDate(dateString) {
                if (!dateString) return '';
                try {
                    const date = new Date(dateString);
                    return date.toLocaleDateString('en-GB');
                } catch (e) {
                    return dateString;
                }
            }

            // 显示提示信息
            function showAlert(message, type) {
                const alertClass = `alert alert-${type} alert-dismissible fade show`;
                const alertHtml = `
                    <div class="${alertClass}" role="alert">
                        <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'danger' ? 'fa-exclamation-circle' : 'fa-info-circle'} me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                $('#alertContainer').html(alertHtml);

                setTimeout(() => {
                    $('.alert').alert('close');
                }, 5000);
            }

            // 重置表单
            function resetForm() {
                $('#taskForm')[0].reset();
                currentEditId = null;
                $('#modalTitle').text('Add New BP34 Record');
                $('.datepicker').datepicker('update', '');
                $('#recordId').val('');
            }

            // 测试 API 连接
            function testApiConnection() {
                console.log('Testing API connection to /api/bp34/get-all');

                $.ajax({
                    url: '/api/bp34/get-all',
                    type: 'GET',
                    dataType: 'json',
                    success: function(response) {
                        console.log('API test successful:', response);
                        if (response.success) {
                            console.log('Found', response.data.length, 'records');
                            initializeDataTable();
                        } else {
                            showAlert('API returned error: ' + response.message, 'danger');
                            initializeSimpleTable();
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('API test failed:', error);
                        showAlert('Cannot connect to server. Please check your connection.', 'danger');
                        initializeSimpleTable();
                    }
                });
            }

            // 初始化 DataTable
            function initializeDataTable() {
                try {
                    // 先检查 DataTable 是否已经存在，如果存在则销毁
                    if ($.fn.DataTable.isDataTable('#taskDatatable')) {
                        dataTable.destroy();
                        $('#taskDatatable').empty();
                    }

                    dataTable = $('#taskDatatable').DataTable({
                        "processing": true,
                        "serverSide": false,
                        "ajax": {
                            "url": "/api/bp34/get-all",
                            "type": "GET",
                            "dataSrc": function(response) {
                                if (response.success) {
                                    return response.data;
                                } else {
                                    console.error('Error loading data:', response.message);
                                    showAlert('Error loading data: ' + response.message, 'danger');
                                    return [];
                                }
                            },
                            "error": function(xhr, error, thrown) {
                                console.error('DataTable AJAX error:', error);
                                showAlert('Failed to load data: ' + error, 'danger');
                            }
                        },
                        "columns": [
                            {
                                "data": "item",
                                "defaultContent": ""
                            },
                            {
                                "data": "grouping",
                                "defaultContent": ""
                            },
                            {
                                "data": "companyName",
                                "defaultContent": ""
                            },
                            {
                                "data": "draftTaxCompleted",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "reviewTax",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "finalTax",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "taxComFinalSignbyClient",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "amountTaxPay",
                                "defaultContent": ""
                            },
                            {
                                "data": "eFileDraft",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "eFileFinal",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "taxRefferanceNo",
                                "defaultContent": ""
                            },
                            {
                                "data": "login",
                                "defaultContent": ""
                            },
                            {
                                "data": "password",
                                "defaultContent": ""
                            },
                            {
                                "data": "typeofForm",
                                "defaultContent": ""
                            },
                            {
                                "data": "spc",
                                "defaultContent": ""
                            },
                            {
                                "data": "invoiceNo",
                                "defaultContent": ""
                            },
                            {
                                "data": "docDespatchDate",
                                "render": function(data) {
                                    return data ? formatDate(data) : '';
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "id",
                                "render": function(data, type, row) {
                                    return `
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-warning edit-btn" data-id="${data}" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger delete-btn" data-id="${data}" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    `;
                                },
                                "orderable": false
                            }
                        ],
                        "order": [[0, 'desc']],
                        "responsive": true,
                        "searching": true,
                        "paging": true,
                        "pageLength": 10,
                        "language": {
                            "emptyTable": "No records found",
                            "zeroRecords": "No matching records found",
                            "loadingRecords": "Loading...",
                            "processing": "Processing..."
                        }
                    });

                    console.log('DataTable initialized successfully');

                } catch (error) {
                    console.error('DataTable initialization failed:', error);
                    showAlert('DataTable initialization failed. Using simple table.', 'warning');
                    initializeSimpleTable();
                }
            }

            // 初始化简单表格（备用）
            function initializeSimpleTable() {
                console.log('Initializing simple table without DataTable');

                $.ajax({
                    url: '/api/bp34/get-all',
                    type: 'GET',
                    success: function(response) {
                        if (response.success) {
                            var tbody = $('#taskDatatable tbody');
                            tbody.empty();

                            if (response.data && response.data.length > 0) {
                                response.data.forEach(function(item) {
                                    var row = `<tr>
                                        <td>${item.item || ''}</td>
                                        <td>${item.grouping || ''}</td>
                                        <td>${item.companyName || ''}</td>
                                        <td>${item.draftTaxCompleted ? formatDate(item.draftTaxCompleted) : ''}</td>
                                        <td>${item.reviewTax ? formatDate(item.reviewTax) : ''}</td>
                                        <td>${item.finalTax ? formatDate(item.finalTax) : ''}</td>
                                        <td>${item.taxComFinalSignbyClient ? formatDate(item.taxComFinalSignbyClient) : ''}</td>
                                        <td>${item.amountTaxPay || ''}</td>
                                        <td>${item.eFileDraft ? formatDate(item.eFileDraft) : ''}</td>
                                        <td>${item.eFileFinal ? formatDate(item.eFileFinal) : ''}</td>
                                        <td>${item.taxRefferanceNo || ''}</td>
                                        <td>${item.login || ''}</td>
                                        <td>${item.password || ''}</td>
                                        <td>${item.typeofForm || ''}</td>
                                        <td>${item.spc || ''}</td>
                                        <td>${item.invoiceNo || ''}</td>
                                        <td>${item.docDespatchDate ? formatDate(item.docDespatchDate) : ''}</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning edit-btn" data-id="${item.id}">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger delete-btn" data-id="${item.id}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>`;
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="18" class="text-center">No records found</td></tr>');
                            }
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Failed to load data for simple table:', error);
                        $('#taskDatatable tbody').html('<tr><td colspan="18" class="text-center">Error loading data</td></tr>');
                    }
                });
            }

            // 保存 BP34 记录
            function saveBP34Record() {
                const formData = {
                    item: $('#item').val(),
                    grouping: $('#grouping').val(),
                    companyName: $('#companyName').val(),
                    draftTaxCompleted: $('#draftTaxCompleted').val(),
                    reviewTax: $('#reviewTax').val(),
                    finalTax: $('#finalTax').val(),
                    taxComFinalSignbyClient: $('#taxComFinalSignbyClient').val(),
                    amountTaxPay: $('#amountTaxPay').val(),
                    eFileDraft: $('#eFileDraft').val(),
                    eFileFinal: $('#eFileFinal').val(),
                    taxRefferanceNo: $('#taxRefferanceNo').val(),
                    login: $('#login').val(),
                    password: $('#password').val(),
                    typeofForm: $('#typeofForm').val(),
                    spc: $('#spc').val(),
                    invoiceNo: $('#invoiceNo').val(),
                    docDespatchDate: $('#docDespatchDate').val()
                };

                const url = currentEditId ? '/api/bp34/update' : '/api/bp34/create';
                const method = currentEditId ? 'PUT' : 'POST';

                if (currentEditId) {
                    formData.id = currentEditId;
                }

                $('#saveBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Saving...');

                $.ajax({
                    url: url,
                    type: method,
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(response) {
                        $('#saveBtn').prop('disabled', false).html('<i class="fas fa-save me-2"></i>Save');

                        if (response.success) {
                            $('#taskModal').modal('hide');
                            refreshTable();
                            resetForm();
                            showAlert('Record saved successfully!', 'success');
                        } else {
                            showAlert('Error saving record: ' + response.message, 'danger');
                        }
                    },
                    error: function(xhr, status, error) {
                        $('#saveBtn').prop('disabled', false).html('<i class="fas fa-save me-2"></i>Save');
                        showAlert('Error saving record: ' + error, 'danger');
                    }
                });
            }

            // 编辑记录
            function editRecord(id) {
                $.get(`/api/bp34/get/${id}`, function(response) {
                    if (response.success) {
                        const record = response.data;
                        currentEditId = record.id;

                        // 填充表单
                        $('#item').val(record.item || '');
                        $('#grouping').val(record.grouping || '');
                        $('#companyName').val(record.companyName || '');
                        $('#draftTaxCompleted').val(record.draftTaxCompleted ? record.draftTaxCompleted.split('T')[0] : '');
                        $('#reviewTax').val(record.reviewTax ? record.reviewTax.split('T')[0] : '');
                        $('#finalTax').val(record.finalTax ? record.finalTax.split('T')[0] : '');
                        $('#taxComFinalSignbyClient').val(record.taxComFinalSignbyClient ? record.taxComFinalSignbyClient.split('T')[0] : '');
                        $('#amountTaxPay').val(record.amountTaxPay || '');
                        $('#eFileDraft').val(record.eFileDraft ? record.eFileDraft.split('T')[0] : '');
                        $('#eFileFinal').val(record.eFileFinal ? record.eFileFinal.split('T')[0] : '');
                        $('#taxRefferanceNo').val(record.taxRefferanceNo || '');
                        $('#login').val(record.login || '');
                        $('#password').val(record.password || '');
                        $('#typeofForm').val(record.typeofForm || '');
                        $('#spc').val(record.spc || '');
                        $('#invoiceNo').val(record.invoiceNo || '');
                        $('#docDespatchDate').val(record.docDespatchDate ? record.docDespatchDate.split('T')[0] : '');

                        $('#modalTitle').text('Edit BP34 Record');
                        $('#taskModal').modal('show');
                    } else {
                        showAlert('Error loading record: ' + response.message, 'danger');
                    }
                }).fail(function(xhr, status, error) {
                    showAlert('Error loading record: ' + error, 'danger');
                });
            }

            // 删除记录
            function deleteRecord(id) {
                if (confirm('Are you sure you want to delete this record? This action cannot be undone.')) {
                    $.ajax({
                        url: `/api/bp34/delete/${id}`,
                        type: 'DELETE',
                        success: function(response) {
                            if (response.success) {
                                refreshTable();
                                showAlert('Record deleted successfully!', 'success');
                            } else {
                                showAlert('Error deleting record: ' + response.message, 'danger');
                            }
                        },
                        error: function(xhr, status, error) {
                            showAlert('Error deleting record: ' + error, 'danger');
                        }
                    });
                }
            }

            // 刷新表格
            function refreshTable() {
                if (dataTable && typeof dataTable.ajax.reload === 'function') {
                    dataTable.ajax.reload(null, false);
                } else {
                    initializeSimpleTable();
                }
            }

            // === 事件监听器 ===
            $('#saveBtn').click(saveBP34Record);

            $(document).on('click', '.edit-btn', function() {
                const id = $(this).data('id');
                editRecord(id);
            });

            $(document).on('click', '.delete-btn', function() {
                const id = $(this).data('id');
                deleteRecord(id);
            });

            $('#taskModal').on('hidden.bs.modal', resetForm);

            $('#addNewBtn').click(function() {
                resetForm();
                $('#modalTitle').text('Add New BP34 Record');
            });

            $('#taskForm').on('submit', function(e) {
                e.preventDefault();
                saveBP34Record();
            });

            // === 初始化应用 ===
            console.log('Initializing BP34 application...');
            initializeDatePickers();
            testApiConnection();
        });
    </script>
}