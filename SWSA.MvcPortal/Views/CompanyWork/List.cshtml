@using SWSA.MvcPortal.Commons.Extensions
@using SWSA.MvcPortal.Models.CompnayWorks
@model List<CompanyWorkListVM>
@{
	ViewData["Title"] = "List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3> Task / Work List</h3>

<div class="row">
	<div class="col-md-12">
		<!-- /.card -->

		<div class="card">
			<!-- /.card-header -->
			<div class="card-body">
				<table id="workDatatable" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Company</th>
							<th>Work Type</th>
							<th>Service Offer</th>
							<th>Company Status </th>
							<th>Activity Size </th>
							<th>Year To Do</th>
							<th>Assigned Users</th>
							<th>Internal Note</th>
							<th>Status</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var task in Model)
						{
							<tr>
								<td>
									@task.CompanyName
									<p class="m-0">(#@task.CompanyRegistrationNumber)</p>
								</td>
								<td>
									@task.WorkType.GetDisplayName()</td>
								<td>@task.ServiceScope.GetDisplayName()</td>
								<td>@task.CompanyStatus.GetDisplayName()</td>
								<td>@task.ActivitySize.GetDisplayName()</td>
								<td>@(task.YearEndToDo ? "Yes" : "No")</td>
								<td>
									<div>
										@for (var i = 0; i < task.AssignedUsers.Count; i++)
										{
											var user = task.AssignedUsers[i];
											var isLast = i == task.AssignedUsers.Count - 1;
											<span class="mr-1">
												<a href="/users/@user.StaffId/overview">
													@user.StaffName

												</a>
											</span>
											@(isLast ? "" : ", ")
										}
									</div>
								</td>
								<td>@task.InternalNote</td>
								<td>@task.Status.GetDisplayName()</td>
								<td>
									<div class="btn-group" role="group">
										<a href="/companies/works/@task.TaskId/overview" class="btn btn-sm btn-info mr-2" title="View">
											<i class="fa fa-eye"></i>
										</a>
										<a href="/companies/works/@task.TaskId/edit" class="btn btn-sm btn-warning mr-2" title="Edit">
											<i class="fa fa-edit"></i>
										</a>

										<button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@task.TaskId" data-name="@($"Task {task.WorkType.GetDisplayName()} for {task.CompanyName}")" title="Delete">
											<i class="fa fa-trash"></i>
										</button>

									</div>
								</td>

							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Company</th>
							<th>Work Type</th>
							<th>Service Offer</th>
							<th>Company Status </th>
							<th>Activity Size </th>
							<th>Assigned Users</th>
							<th>Year To Do</th>
							<th>Internal Note</th>
							<th>Status</th>
							<th>Action</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
</div>

@section Scripts {
	<partial name="_DatatablesScriptsPartial" />

	<script src="~/js/companies/list-work.js" asp-append-version="true"></script>
}