@using SWSA.MvcPortal.Commons.Constants
@using SWSA.MvcPortal.Commons.Extensions
@using SWSA.MvcPortal.Commons.Helpers
@model SWSA.MvcPortal.Models.Users.UserOverviewVM

@{
	ViewData["Title"] = "Overview";
	Layout = "~/Views/Shared/_Layout.cshtml";

	var yesNo = SelectHelper.GetYesNoSelection(Model.IsActive);
	var assignedTask = Model.AssignedWorks;
	var assignedCompanies = Model.AssignedCompanies;
}
<h3>User Overview</h3>

<div class="row">
	<div class="col-md-12">
		<form>
			<!-- jquery validation -->
			<div class="card card-primary">
				<div class="card-header">
					<h3 class="card-title">User Info</h3>

					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse">
							<i class="fas fa-minus"></i>
						</button>
					</div>
				</div>

				<!-- /.card-header -->
				<!-- form start -->
				<div class="card-body row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Staff Id</label>
							<input readonly class="form-control" value="@Model.StaffId" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Username</label>
							<input readonly class="form-control" value="@Model.Username" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>User Role</label>
							<input readonly class="form-control" value="@Model.Role.GetDisplayName()" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Full Name</label>
							<input readonly class="form-control" value="@Model.FullName" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Phone Number</label>
							<input readonly class="form-control" value="@Model.PhoneNumber" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Email</label>
							<input readonly class="form-control" value="@Model.Email" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label for="IsActive">Is Active</label>
							<select disabled asp-items="yesNo" class="form-control select2"></select>

						</div>
					</div>
				</div>

			</div>
		</form>
		<!-- /.card -->
	</div>

	<div class="col-md-12">
		<!-- /.card -->

		<div class="card card-secondary collapsed-card">
			<div class="card-header">
				<h3 class="card-title">Handled Companies</h3>

				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse">
						<i class="fas fa-plus"></i>
					</button>
				</div>
			</div>
			<!-- /.card-header -->
			<div class="card-body" style="display:none">
				<table id="handleCompaniesTable" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Type</th>
							<th>Registration Number</th>
							<th>Year End Month</th>
							<th>Incorporation Date</th>
							<th>Director Name</th>
							<th>Contacts Count</th>
							<th>MsicCodes Count</th>
							<th>Work/Task Count</th>
							<th>Is Striked Off</th>
							<th>Strike Off Status</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var cp in assignedCompanies)
						{
							<tr>
								<td>@cp.CompanyName</td>
								<td>@cp.CompanyType.GetDisplayName()</td>
								<td>@cp.RegistrationNumber</td>
								<td>@cp.YearEndMonth</td>
								<td>@(cp.IncorporationDate?.ToString("yyyy-MM-dd") ?? AppSettings.NotAvailable)</td>
								<td>@cp.CompanyDirectorName</td>
								<td>@cp.ContactsCount</td>
								<td>@cp.MsicCodesCount</td>
								<td>@cp.WorkCount</td>
								<td>@(cp.IsStrikedOff ? "Yes" : "No")</td>
								<td>@cp.StrikeOffStatus.GetDisplayName()</td>
								<td>
									<div class="btn-group" role="group">
										<a href="/companies/@cp.CompanyId/overview" class="btn btn-sm btn-info mr-2" title="View">
											<i class="fa fa-eye"></i>
										</a>
										<a href="/companies/@cp.CompanyId/edit" class="btn btn-sm btn-warning mr-2" title="Edit">
											<i class="fa fa-edit"></i>
										</a>
									</div>
								</td>

							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Name</th>
							<th>Type</th>
							<th>Registration Number</th>
							<th>Year End Month</th>
							<th>Incorporation Date</th>
							<th>Director Name</th>
							<th>Contacts Count</th>
							<th>MsicCodes Count</th>
							<th>Work/Task Count</th>
							<th>Is Striked Off</th>
							<th>Strike Off Status</th>
							<th>Action</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>

	<div class="col-md-12">
		<!-- /.card -->

		<div class="card card-secondary collapsed-card">
			<div class="card-header">
				<h3 class="card-title">Assigned Task</h3>

				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse">
						<i class="fas fa-plus"></i>
					</button>
				</div>
			</div>
			<!-- /.card-header -->
			<div class="card-body">
				<table id="assignedTaskTable" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Company</th>
							<th>Work Type</th>
							<th>Service Offer</th>
							<th>Company Status </th>
							<th>Activity Size </th>
							<th>Year To Do</th>
							<th>Internal Note</th>
							<th>Status</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var task in assignedTask)
						{

							<tr>
								<td>
									@task.CompanyName
									<p class="m-0">(#@task.CompanyRegistrationNumber)</p>
								</td>
								<td>
									@task.WorkType.GetDisplayName()
								</td>
								<td>@task.ServiceScope.GetDisplayName()</td>
								<td>@task.CompanyStatus.GetDisplayName()</td>
								<td>@task.ActivitySize.GetDisplayName()</td>
								<td>@(task.YearEndToDo ? "Yes" : "No")</td>

								<td>@task.InternalNote</td>
								<td>@task.Status.GetDisplayName()</td>
								<td>
									<div class="btn-group" role="group">
										<a href="/companies/works/@task.TaskId/overview" class="btn btn-sm btn-info mr-2" title="View">
											<i class="fa fa-eye"></i>
										</a>
										<a href="/companies/works/@task.TaskId/edit" class="btn btn-sm btn-warning mr-2" title="Edit">
											<i class="fa fa-edit"></i>
										</a>
									</div>
								</td>

							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Company</th>
							<th>Work Type</th>
							<th>Service Offer</th>
							<th>Company Status </th>
							<th>Activity Size </th>
							<th>Year To Do</th>
							<th>Internal Note</th>
							<th>Status</th>
							<th>Action</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
</div>


@section Scripts {
	<partial name="_DatatablesScriptsPartial" />
	<script src="~/js/users/overview.js" asp-append-version="true"></script>
}