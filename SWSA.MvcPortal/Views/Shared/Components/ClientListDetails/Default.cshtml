@using SWSA.MvcPortal.Commons.Enums
@model ClientType
@{
    var isIndividual = Model == ClientType.Individual;
    var labelDetails = isIndividual ? "Client" : "Company";
}

<div class="card card-primary  collapsed-card">
    <div class="card-header detail-header">
        <h3 class="card-title">
            <i class="fas fa-building"></i>  @labelDetails Details
        </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>
    <div class="card-body pt-0" style="display:none">
        <form class="mb-2">
            <div class="row">
                <div class="col-md-12">
                    <div class="mt-3 d-flex flex-wrap justify-content-start gap-2">
                        <button type="button" class="btn btn-primary mr-2 mb-2 btn-nav-edit">
                            <i class="fas fa-edit mr-1"></i> Edit Info
                        </button>
                        <button type="button" class="btn btn-warning mr-2 mb-2 btn-work-alloc" data-table-id="workAllocationDatatable">
                            <i class="fas fa-tasks mr-1"></i> Add Work Allocation
                        </button>
                        @if (!isIndividual)
                        {
                            <button type="button" class="btn btn-secondary mr-2 mb-2 btn-add-owner" data-table-id="ownerDatatable">
                                <i class="fas fa-user-plus mr-1"></i> Add Owner Contact
                            </button>
                        }
                        <button type="button" class="btn btn-success mr-2 mb-2 btn-add-official" data-table-id="officialCtDatatable">
                            <i class="fas fa-id-badge mr-1"></i> Add Official Contact
                        </button>

                        <button type="button" class="btn btn-info mr-2 mb-2 btn-add-comm" data-table-id="communicationCtDatatable">
                            <i class="fas fa-phone mr-1"></i> Add Communication Contact
                        </button>
                    </div>
                </div>

                <div class="form-info-label col-12">
                    <label>Admin</label>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="grouping">Group</label>
                        <input readonly type="text" class="form-control" id="grouping" placeholder="grouping">

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="referral">Referral</label>
                        <input readonly type="text" class="form-control" id="referral" placeholder="referral">
                    </div>
                </div>
                @if (!isIndividual)
                {
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fileNo">File No</label>
                            <input readonly type="text" class="form-control" id="fileNo" placeholder="File No">
                        </div>
                    </div>
                }

                <div class="divider-line"></div>
                @if (isIndividual)
                {
                    <div class="form-info-label col-12">
                        <label>Company Info</label>
                    </div>
                    <input readonly type="text" class="form-control d-none" id="clientId">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="individualName">Individual Name</label>
                            <input readonly type="text" class="form-control" id="individualName">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="icOrPassport">IC / Passport#</label>
                            <input readonly type="text" class="form-control" id="icOrPassport">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="profession">Profession</label>
                            <input readonly type="text" class="form-control" id="profession">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="yearEnd">Year End</label>
                            <input readonly type="text" class="form-control" id="yearEnd">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="tinNumber">TIN Number</label>
                            <input readonly type="text" class="form-control" id="tinNumber">
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-info-label col-12">
                        <label>Company Info</label>
                    </div>
                    <input readonly type="text" class="form-control d-none" id="clientId">

                    <div class="col-md-4">

                        <div class="form-group">
                            <label for="companyName">Company Name</label>
                            <input readonly type="text" class="form-control" id="companyName">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="companyType">Company Type</label>
                            <input readonly type="text" class="form-control" id="companyType">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="yearEnd">Year End</label>
                            <input readonly type="text" class="form-control" id="yearEnd">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="incorpDate">Incorporation Date</label>
                            <div class="input-group">
                                <input readonly type="text" id="incorpDate" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="companyNumber">Registration Number</label>
                            <input readonly type="text" class="form-control" id="companyNumber">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="eNumber">E Number </label>
                            <input readonly type="text" class="form-control" id="eNumber">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="tinNumber">TIN Number</label>
                            <input readonly type="text" class="form-control" id="tinNumber">
                        </div>
                    </div>

                    <div class="form-info-label col-12">
                        <label>MSIC Code</label>
                    </div>

                    <div class="col-md-12">
                        <table id="msicCodeDatatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                }

                <div class="form-info-label col-12">
                    <label>
                        Work Allocations
                        <button type="button" class="btn btn-warning mr-2 mb-2 btn-work-alloc" data-table-id="workAllocationDatatable">
                            <i class="fas fa-tasks mr-1"></i> Add Work Allocation
                        </button>

                    </label>
                </div>
                <div class="col-md-12">
                    <table id="workAllocationDatatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th rowspan="2">Service Required By Client</th>
                                <th colspan="2">For Audit Dept</th>
                                <th rowspan="2">Activity/Co size</th>
                                <th rowspan="2">Remarks</th>
                            </tr>
                            <tr>
                                <th>Co status</th>
                                <th>Audit Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>


                <div class="divider-line"></div>

                @if (!isIndividual)
                {
                    <div class="form-info-label col-12">
                        <label>
                            Company Owner's / Partner's Information
                            <button type="button" class="btn btn-secondary mr-2 mb-2 btn-add-owner" data-table-id="ownerDatatable">
                                <i class="fas fa-user-plus mr-1"></i> Add Owner Contact
                            </button>
                        </label>
                    </div>

                    <div class="col-md-12">
                        <table id="ownerDatatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name per IC</th>
                                    <th>Form BE to Submit</th>
                                    <th>IC /Passport #</th>
                                    <th>Position</th>
                                    <th>Tax Ref No.</th>
                                    <th>Telephone</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>

                    <div class="divider-line"></div>
                }

                <div class="form-info-label col-12">
                    <label>
                        Official Contacts
                        <button type="button" class="btn btn-success mr-2 mb-2 btn-add-official" data-table-id="officialCtDatatable">
                            <i class="fas fa-id-badge mr-1"></i> Add Official Contact
                        </button>


                    </label>
                </div>
                <div class="col-md-12">
                    <table id="officialCtDatatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>Office Tel.</th>
                                <th>Email</th>
                                <th>Remark</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="divider-line"></div>

                <div class="form-info-label col-12">
                    <label>
                        Communication Contact
                        <button type="button" class="btn btn-info mr-2 mb-2 btn-add-comm" data-table-id="communicationCtDatatable">
                            <i class="fas fa-phone mr-1"></i> Add Communication Contact
                        </button>
                    </label>
                </div>
                <div class="col-md-12">
                    <table id="communicationCtDatatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Contact Name</th>
                                <th>Position/Title</th>
                                <th>Whatsapp</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

            </div>

        </form>
    </div>
</div>
