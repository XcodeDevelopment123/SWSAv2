@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let currentEditingId = null;
        let dataTable = null;
        // 1. 创建一个全局 Map，用于 Name -> ID 的反向查找，解决 Edit 回显问题
        let clientNameMap = {};
        let clientDataMap = {}; // ID -> Data

        $(document).ready(function() {
            // 确保页面有 hidden input 用于存储 companyName (因为 saveRecord 需要这个字段)
            if ($('#companyName').length === 0) {
                $('#taskForm').append('<input type="hidden" id="companyName" name="companyName" />');
            }

            // 2. 先加载 Dropdown，加载完后再加载表格数据
            loadClientOptions();
            loadData();
        });

        // ---------------------------------------------------------
        //  加载 Dropdown (只做选择，不自动填其他)
        // ---------------------------------------------------------
        function loadClientOptions() {
            $.ajax({
                url: '/api/get/company-options',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        const select = $('#clientSelect');
                        select.empty();
                        select.append('<option value="">-- Select client --</option>');

                        // 重置 Map
                        clientNameMap = {};
                        clientDataMap = {};

                        response.data.forEach(client => {
                            // 存入 Map：Key=公司名, Value=ID
                            // 这样 Edit 的时候，即使只有公司名，也能找到对应的 ID
                            if(client.companyName) {
                                clientNameMap[client.companyName.trim()] = client.id;
                            }
                            clientDataMap[client.id] = client;

                            select.append(`<option value="${client.id}">${client.companyName}</option>`);
                        });
                    }
                }
            });
        }

        // ---------------------------------------------------------
        //  Dropdown Change 事件
        // ---------------------------------------------------------
        $('#clientSelect').on('change', function() {
            const selectedId = $(this).val();
            const clientData = clientDataMap[selectedId];

            if (clientData) {
                // 既然你说 "他没有字段供给自动填的部分"
                // 这里我们 **只** 填入 CompanyName 给隐藏字段 (为了 saveRecord 能拿到名字)
                $('#companyName').val(clientData.companyName);

                // 也可以记录 ID
                $('#clientId').val(clientData.id);
                $('#client').val(clientData.companyName);
            } else {
                $('#companyName').val('');
                $('#clientId').val('');
                $('#client').val('');
            }
        });

        // ---------------------------------------------------------
        //  原有的 DataTable 和 CRUD 逻辑
        // ---------------------------------------------------------

        function initializeDataTable() {
            if ($.fn.DataTable.isDataTable('#taskDatatable')) {
                dataTable.destroy();
                $('#taskDatatable').empty();
            }

            // 重新构建表头 (因为你的 HTML 里表头是写死的，这里不需要 JS 动态生成表头结构，只需要配置 DataTable)
            // 注意：如果你的 populateTable 是动态插入 tbody，这里只需要初始化功能

            dataTable = $('#taskDatatable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "scrollX": true,
                "language": {
                    "emptyTable": "No audit master log book records found",
                    "loadingRecords": "Loading...",
                    "zeroRecords": "No matching records found"
                }
            });
            console.log('DataTable initialized successfully');
        }

        function loadData() {
            const tbody = $('#tableBody');
            // 如果 DataTable 存在，先销毁以便更新 tbody
            if ($.fn.DataTable.isDataTable('#taskDatatable')) {
                $('#taskDatatable').DataTable().destroy();
            }

            tbody.html('<tr><td colspan="32" class="text-center">Loading data...</td></tr>');

            $.ajax({
                url: '/api/auditdept/at31/get-all',
                type: 'GET',
                success: function(response) {
                    if (response.success && response.data) {
                        populateTable(response.data);
                    } else {
                        tbody.html('<tr><td colspan="32" class="text-center">No data available</td></tr>');
                        initializeDataTable();
                    }
                },
                error: function(xhr, status, error) {
                    tbody.html('<tr><td colspan="32" class="text-center">Error loading data</td></tr>');
                    showAlert('Error loading data: ' + error, 'danger');
                }
            });
        }

        function populateTable(data) {
            const tbody = $('#tableBody');
            tbody.empty();

            if (data && data.length > 0) {
                data.forEach(function(item, index) {
                    const row = `
                        <tr>
                            <td>${index + 1}</td>
                            <td>${escapeHtml(item.companyName || '')}</td>
                            <td>${escapeHtml(item.activity || '')}</td>
                            <td>${escapeHtml(item.yEtoDo || '')}</td>
                            <td>${escapeHtml(item.quartertoDo || '')}</td>
                            <td>${escapeHtml(item.pic || '')}</td>
                            <td>${formatDate(item.mthDue)}</td>
                            <td>${escapeHtml(item.status || '')}</td>
                            <td>${formatDate(item.docInwardsDate)}</td>
                            <td>${formatNumber(item.revenue)}</td>
                            <td>${formatNumber(item.profit)}</td>
                            <td>${formatNumber(item.auditFee)}</td>
                            <td>${formatDate(item.dateBilled)}</td>
                            <td>${formatDate(item.startDate)}</td>
                            <td>${formatDate(item.endDate)}</td>
                            <td>${item.daysDone || ''}</td>
                            <td>${formatPercentage(item.donePercent)}</td>
                            <td>${escapeHtml(item.completed || '')}</td>
                            <td>${formatDate(item.dateSent)}</td>
                            <td>${formatDate(item.dateSentToKK)}</td>
                            <td>${escapeHtml(item.reviewResultofDays || '')}</td>
                            <td>${formatDate(item.dateReceiveFromKK)}</td>
                            <td>${escapeHtml(item.whoMeetClientDate || '')}</td>
                            <td>${formatDate(item.dateSenttoClient)}</td>
                            <td>${formatDate(item.dateReceiveBack)}</td>
                            <td>${formatDate(item.taxDueDate)}</td>
                            <td>${formatDate(item.passtoDept)}</td>
                            <td>${formatDate(item.ssMdueDate)}</td>
                            <td>${formatDate(item.datePasstoSecDept)}</td>
                            <td>${escapeHtml(item.binded || '')}</td>
                            <td>${formatDate(item.despatchDateToClient)}</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-1" onclick="editRecord(${item.id})" title="Edit"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-sm btn-danger" onclick="deleteRecord(${item.id})" title="Delete"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    `;
                    tbody.append(row);
                });
            }
            // 重新初始化 DataTable
            initializeDataTable();
        }

        function openCreateModal() {
            currentEditingId = null;
            $('#modalTitle').text('Add New Audit Master Log Book Record');
            $('#taskForm')[0].reset();
            $('#recordId').val('');

            // 重置 dropdown
            $('#clientSelect').val('');

            $('#taskModal').modal('show');
        }

        // ---------------------------------------------------------
        //  Edit Record (关键修改：正确回显 Dropdown)
        // ---------------------------------------------------------
        function editRecord(id) {
            $.ajax({
                url: '/api/auditdept/at31/get/' + id,
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        const record = response.data;
                        currentEditingId = record.id;
                        $('#modalTitle').text('Edit Audit Master Log Book Record');
                        $('#recordId').val(record.id);

                        // === 重点逻辑开始 ===
                        // 目标：让 Dropdown 选中正确的 Client

                        // 1. 先把名字填入 hidden input
                        $('#companyName').val(record.companyName || '');

                        // 2. 尝试设置 Dropdown 的值
                        // 如果后端返回了 ClientID (假设字段叫 clientId)，直接用
                        if (record.clientId) {
                            $('#clientSelect').val(record.clientId);
                        }
                        // 如果后端没返回 ClientID，只有 companyName，我们用 Map 反向查找 ID
                        else if (record.companyName) {
                            const foundId = clientNameMap[record.companyName.trim()];
                            if (foundId) {
                                $('#clientSelect').val(foundId);
                            } else {
                                // 如果找不到（比如名字改了，或者不在列表里），这就没办法了
                                // 可以选择保留为空，或者显示一个警告
                                console.warn('Could not find client ID for name:', record.companyName);
                            }
                        }
                        // === 重点逻辑结束 ===

                        // 填充其他字段 (保持原样)
                        $('#activity').val(record.activity || '');
                        $('#yeToDo').val(record.yEtoDo || '');
                        $('#quarterToDo').val(record.quartertoDo || '');
                        $('#pic').val(record.pic || '');
                        $('#eighteenMonthsDue').val(formatDateForInput(record.mthDue));
